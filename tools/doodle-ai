#!/bin/bash
# AI drawing tool for Purple Computer
# Usage: ./tools/doodle-ai --goal "a tree on a green hill"
#        ./tools/doodle-ai --goal "sunset" --iterations 8
#        ./tools/doodle-ai --from path/to/screenshot.png --instruction "add a bird"

cd "$(dirname "$0")/.."
source .venv/bin/activate

# Install tool dependencies if missing
if ! python -c "import anthropic; import cairosvg" 2>/dev/null; then
    echo "Installing tool dependencies..."
    pip install -q -r tools/requirements.txt
fi

exec python tools/doodle_ai.py "$@"
